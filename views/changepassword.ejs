<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Change Password
        </h1>
        <%- include('partials/messages.ejs') %>
        <form action="/users/changepassword" method="POST">
          
          <div class="form-group">
            <label for="password">Enter your password again</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter New password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            change Password
          </button>
        </form>
        
        <p class="lead mt-4">continue browsing Website <a href="/">Click here</a></p>
      </div>
    </div>
  </div>

  
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Reset Your Password
        </h1>
        <%- include('partials/messages.ejs') %>
        <form action="forgetpassword" method="POST">
          <div class="form-group">
            <label for="email">Enter Your Email for which password has to be reset</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <br>
       
          <button type="submit" class="btn btn-primary btn-block">
            send email
          </button>
        </form>
        
        <p class="lead mt-4">continue browsing Website <a href="/">Click here</a></p>
      </div>
    </div>
  </div>